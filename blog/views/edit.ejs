<% include ./partials/header %>


<div class = "ui main text container segment"> 
    <div class = "ui huge header"> Edit <%=foundEditBlog.title %></div>
    
    <form action="/blog/<%=foundEditBlog._id %>?_method=PUT" method="POST" class = "ui form">
        <div class = "field">
            <label>Title</label>
            <input type="text" name="blog[title]" value = "<%=foundEditBlog.title %>">
        </div>
        <div class = "field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image Source" value = "<%=foundEditBlog.image %>">
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea name="blog[word]" placeholder="Write Here" ><%=foundEditBlog.word %></textarea>
        </div>
        <input type="submit" class = "ui blue basic button" value= "Edit">
    </form>

</div>


<% include ./partials/footer %>