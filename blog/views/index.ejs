<% include ./partials/header %>

<div class = "ui main text container">
    <div class = "ui huge header" id = "app_name">Aditya Stories</div>
    <div class = "ui top attached segment">
        <div class = "ui divided items">
            <% for(var i = 0 ; i< findBlogs.length ; i++){ %>
                <div class = "item">
                    <div class = "image">
                        <img src="<%= findBlogs[i].image %>">
                    </div>
                    <div class = "content">
                        <a class = "header" href = "/blog/<%=findBlogs[i]._id %>"><%= findBlogs[i].title %></a>
                        <div class = "meta">
                            <span> <%= findBlogs[i].created.toDateString() %> </span>
                        </div>
                        <div class = "description">
                            <p> <%- findBlogs[i].word.substring(0,100) %>... </p>
                        </div>
                        <div class = "extra">
                            <a class = "ui floated basic blue button" href = "/blog/<%=findBlogs[i]._id %>">
                                Read More <i class = "right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>




<% include ./partials/footer %>
